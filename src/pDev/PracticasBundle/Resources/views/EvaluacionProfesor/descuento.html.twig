{% extends 'pDevWebBundle:Default:basemodal.html.twig' %}

{% block title %}Modificar descuento{% endblock %}
{% block body %}
    <form id="form_descuento" class="form-horizontal form-modal" action="{{ path('practicas_evaluacion_profesor_descuento',{'id': entity.id}) }}" method="post" {{ form_enctype(form) }}>
        {{ form_row(form.descuento) }}        
        {{ form_rest(form) }}
        <button type="submit" id="_submit" class="hide"></button>
    </form>
{% endblock %}

{% block footer %}
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancelar</button>
    <a href="#form_descuento" class="btn btn-primary submitform">Guardar</a>
{% endblock %}
