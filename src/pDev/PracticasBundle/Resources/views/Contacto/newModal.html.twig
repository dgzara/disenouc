{% extends 'pDevWebBundle:Default:basemodal.html.twig' %}

{% block title %}Registrar contacto{% endblock %}
{% block body %}
    <form id="form_new_contacto" action="{{ path('practicas_contacto_create_modal', {'organizacionId': organizacion.id }) }}" method="post" {{ form_enctype(form) }}>
        {{ form_rest(form) }}
        <button type="submit" id="_submit" class="hide"></button>
    </form>
    {% javascripts combine=true
        '@pDevPracticasBundle/Resources/public/js/contacto.js' 
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block footer %}
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancelar</button>
    <a href="#form_new_contacto" class="btn btn-primary submitform">Guardar</a>
{% endblock %}
