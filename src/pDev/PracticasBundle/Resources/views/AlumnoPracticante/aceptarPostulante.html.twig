{% extends 'pDevWebBundle:Default:basemodal.html.twig' %}

{% block title %}Aceptar postulante{% endblock %}
{% block body %}
    <form id="form_asignar" class="form-horizontal form-modal" action="{{ path('practicas_alumno_postulante_aceptar', {'id': entity.id}) }}" method="post" {{ form_enctype(form) }}>
        ¿Desea aceptar al alumno {{ entity.alumno }} como postulante para la práctica seleccionada?<br>
        Puede aceptar a más de un postulante y los alumnos aceptados se comunicarán con Ud.
        {{ form_widget(form) }}
        <button type="submit" id="_submit" class="hide"></button>
    </form>
{% endblock %}

{% block footer %}
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancelar</button>
    <a href="#form_asignar" class="btn btn-primary submitform">Guardar</a>
{% endblock %}
