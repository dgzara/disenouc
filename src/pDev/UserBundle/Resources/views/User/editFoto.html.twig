{% extends 'pDevWebBundle:Default:basemodal.html.twig' %}

{% block title %}Cambiar Imagen{% endblock %}
{% block body %}
    <form id="form_image" class="form-horizontal well modal-form" action="{{ path('user_update', { 'username': entity.username }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form.foto) }}
        {{ form_rest(edit_form) }}
        <button type="submit" id="_submit" class="hide"></button>
    </form>
{% endblock %}
{% block footer %}
<button class="btn" data-dismiss="modal" aria-hidden="true">Cancelar</button>
<a href="#form_image" class="btn btn-primary submitform">Guardar</a>

{% endblock %}
