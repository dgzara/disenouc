{% extends 'pDevWebBundle:Default:basemodal.html.twig' %}

{% block title %}Modificar permisos{% endblock %}
{% block body %}
    <form id="form_permisos" class="form-modal" action="{{ path('user_permisos',{'username':user.username}) }}" method="post" {{ form_enctype(form) }}>
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>Sitio</th>
                    <th>Permiso</th>
                </tr>
            </thead>
            <tbody>
            {% for permiso in form.permisos %}   
                <tr>
                    <th>{{permiso.vars.value.site.nombre}}</th>
                    <td>{{ form_widget(permiso) }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        
        {{ form_rest(form) }}
        <button type="submit" id="_submit" class="hide"></button>
    </form>
{% endblock %}
{% block footer %}
<button class="btn" data-dismiss="modal" aria-hidden="true">Cancelar</button>
<a href="#form_permisos" class="btn btn-primary submitform">Guardar</a>

{% endblock %}
